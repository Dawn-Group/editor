{
  "packages": [
    "base",
    "plugins/*"
    
  ],
  "npmClient": "yarn --interactive --network-concurrency 1",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignore-file",
        "*.md"
      ],
      "access": "public"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent"
}
